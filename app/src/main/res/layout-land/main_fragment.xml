<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity" android:background="@android:color/white">

    <TableLayout
            android:id="@+id/tableLayout3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="bottom|center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline"
            app:layout_constraintVertical_bias="1.0">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="1dp">

            <Button
                    android:id="@+id/clear"
                    android:layout_height="45dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="1"
                    android:background="#91f72a1c"
                    android:text="CLR"
                    android:textSize="24sp"/>

            <Button
                    android:id="@+id/left"
                    android:layout_height="45dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="1"
                    android:background="#9ff3ae2e"
                   
                    android:text="("
                    android:textSize="24sp"/>

            <Button
                    android:id="@+id/right"
                    android:layout_height="45dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="1"
                    android:background="#9ff3ae2e"
                   
                    android:text=")"
                    android:textSize="24sp"/>

            <Button
                    android:id="@+id/delete"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="#91f72a1c"
                    android:text="DEL"
                    android:textSize="24sp"/>
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp">

            <Button
                    android:id="@+id/seven"
                    android:layout_height="45dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="1"
                    android:background="#60e0dede"
                   
                    android:text="7"
                    android:textSize="32sp"/>

            <Button
                    android:id="@+id/eight"
                    android:layout_height="45dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="1"
                    android:background="#60e0dede"
                   
                    android:text="8"
                    android:textSize="32sp"/>

            <Button
                    android:id="@+id/nine"
                    android:layout_height="45dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="1"
                    android:background="#60e0dede"
                   
                    android:text="9"
                    android:textSize="32sp"/>

            <Button
                    android:id="@+id/plus"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="#9ff3ae2e"
                   
                    android:text="+"
                    android:textSize="32sp"/>
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp">

            <Button
                    android:id="@+id/four"
                    android:layout_height="45dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="1"
                    android:background="#60e0dede"
                   
                    android:text="4"
                    android:textSize="32sp"/>

            <Button
                    android:id="@+id/five"
                    android:layout_height="45dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="1"
                    android:background="#60e0dede"
                   
                    android:text="5"
                    android:textSize="32sp"/>

            <Button
                    android:id="@+id/six"
                    android:layout_height="45dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="1"
                    android:background="#60e0dede"
                   
                    android:text="6"
                    android:textSize="32sp"/>

            <Button
                    android:id="@+id/minus"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="#9ff3ae2e"
                   
                    android:text="-"
                    android:textSize="32sp"/>
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp">

            <Button
                    android:id="@+id/one"
                    android:layout_height="45dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="1"
                    android:background="#60e0dede"
                   
                    android:text="1"
                    android:textSize="32sp"/>

            <Button
                    android:id="@+id/two"
                    android:layout_height="45dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="1"
                    android:background="#60e0dede"
                   
                    android:text="2"
                    android:textSize="32sp"/>

            <Button
                    android:id="@+id/three"
                    android:layout_height="45dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="1"
                    android:background="#60e0dede"
                   
                    android:text="3"
                    android:textSize="32sp"/>

            <Button
                    android:id="@+id/multiply"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="#9ff3ae2e"
                   
                    android:text="*"
                    android:textSize="32sp"/>
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                    android:id="@+id/divide"
                    android:layout_height="45dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="1"
                    android:background="#9ff3ae2e"
                   
                    android:text="/"
                    android:textSize="32sp"/>

            <Button
                    android:id="@+id/zero"
                    android:layout_height="45dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="1"
                    android:background="#60e0dede"
                   
                    android:text="0"
                    android:textSize="32sp"/>

            <Button
                    android:id="@+id/decimal"
                    android:layout_height="45dp"
                    android:layout_marginEnd="1dp"
                    android:layout_weight="1"
                    android:background="#9ff3ae2e"
                   
                    android:text="."
                    android:textSize="32sp"/>

            <Button
                    android:id="@+id/equals"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="#9ff3ae2e"
                   
                    android:text="="
                    android:textSize="32sp"/>
        </TableRow>
    </TableLayout>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.31"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextExpression" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="30sp"
            android:textAlignment="viewEnd" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewResult" android:padding="6dp"
            android:background="@android:color/white"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textViewResult" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textSize="24sp" android:textStyle="italic"
            android:textAlignment="textEnd" android:padding="4dp" android:maxLines="1"/>

</android.support.constraint.ConstraintLayout>